{
  "info": {
    "name": "Claims Backend API",
    "description": "Comprehensive REST API for healthcare claims management and reporting with JWT authentication, role-based access control, and comprehensive audit logging.",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{authToken}}",
        "type": "string"
      }
    ]
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Add correlation ID to all requests",
          "pm.request.headers.add({",
          "    key: 'X-Correlation-ID',",
          "    value: pm.variables.replaceIn('{{$guid}}')",
          "});",
          "",
          "// Add timestamp for request tracking",
          "pm.globals.set('requestTimestamp', new Date().toISOString());",
          "",
          "// Log request start",
          "console.log('Starting request:', pm.request.method, pm.request.url.toString());"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Basic response validation",
          "pm.test('Status code is successful', function () {",
          "    pm.expect(pm.response.code).to.be.oneOf([200, 201, 202]);",
          "});",
          "",
          "// Response time validation",
          "pm.test('Response time is less than 5000ms', function () {",
          "    pm.expect(pm.response.responseTime).to.be.below(5000);",
          "});",
          "",
          "// Correlation ID validation",
          "pm.test('Correlation ID is present in response headers', function () {",
          "    pm.expect(pm.response.headers.get('X-Correlation-ID')).to.not.be.null;",
          "});",
          "",
          "// Log response details",
          "console.log('Response status:', pm.response.code);",
          "console.log('Response time:', pm.response.responseTime + 'ms');",
          "console.log('Correlation ID:', pm.response.headers.get('X-Correlation-ID'));"
        ]
      }
    }
  ],
